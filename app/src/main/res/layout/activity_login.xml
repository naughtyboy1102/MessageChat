<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.LoginActivity">

        <EditText
            android:id="@+id/edt_activity_login_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_login_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_login_horizontal_margin"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="@dimen/activity_login_horizontal_margin"
            android:layout_marginRight="@dimen/activity_login_horizontal_margin"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_activity_login_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_login_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_login_horizontal_margin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/activity_login_horizontal_margin"
            android:layout_marginRight="@dimen/activity_login_horizontal_margin"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_activity_login_email" />

        <Button
            android:id="@+id/btn_activity_login_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_login_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_login_horizontal_margin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/activity_login_horizontal_margin"
            android:layout_marginRight="@dimen/activity_login_horizontal_margin"
            android:background="@color/colorPrimary"
            android:text="Login"
            android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_activity_login_password" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_login_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_login_horizontal_margin"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="@dimen/activity_login_horizontal_margin"
            android:layout_marginRight="@dimen/activity_login_horizontal_margin"
            android:gravity="clip_horizontal|center_horizontal"
            android:text="Don't have an account?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_activity_login_login" />

        <Button
            android:id="@+id/btn_activity_login_create_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_login_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_login_horizontal_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/activity_login_horizontal_margin"
            android:layout_marginRight="@dimen/activity_login_horizontal_margin"
            android:background="@color/colorPrimary"
            android:text="Create account"
            android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
